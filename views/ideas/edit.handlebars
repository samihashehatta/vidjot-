

<div class="card card-body">
    <h3>
        video idea
    </h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group ">
            <label for="title">Title</label>
            <input type="text" required class="form-control" value="{{idea.title}}" name="title">
        </div>
        <div class="form-group ">
            <label for="dets">details</label>
            <textarea type="text" required class="form-control"  name="dets">{{idea.dets}}</textarea>
        </div>
        <button type="submit" class="btn btn-lg">Submit</button>
    </form>
</div>